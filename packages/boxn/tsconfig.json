{
    "extends": "../../tsconfig.default.json",
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "esnext"
        ],
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "outDir": "lib",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ],
    "references": []
}